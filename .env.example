# =====================================================
# ChatGPT Web Server Environment Variables
# =====================================================
# Copy this file to .env and fill in your values
# =====================================================

# Database password (change in production!)
DB_PASSWORD=chatbot_secure_password

# OpenAI API Key (required for chat functionality)
OPENAI_API_KEY=your-openai-api-key-here

# JWT Secret (leave empty to auto-generate, or set for consistency across restarts)
JWT_SECRET=

# Admin password (leave empty to use default: admin123)
ADMIN_PASSWORD=

# Google OAuth (optional, for Google sign-in)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Port mappings
APP_PORT=8080
ADMINER_PORT=8081
